<div align="center">
    <%= form_for @company do |f| %>
        <p>
            <%= f.label :name %>
            <%= f.text_field :name %>
        </p>
        
        <p>
            <%= f.label :email %>
            <%= f.email_field :email %>
        </p>
        
        <p>
            <%= f.label :phone %>
            <%= f.text_field :phone %>
        </p>
        
        <p>
            <%= f.label :description %>
            <%= f.text_area :description %>
        </p> 
        
        <p>
            <%= f.label :year_established %>
            <%= f.text_field :year_established %>
        </p>
        
        <p>
            <%= f.submit %>
        </p>
        
    <% end %>
</div>